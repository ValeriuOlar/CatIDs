<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/YouTubeknow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catidadaf"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/yknowlage2"
        android:layout_width="116dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="338dp"
        android:background="@drawable/rounded_button"
        android:text="Cat Search"
        android:textColor="#761d1d" />

    <TextView
        android:id="@+id/d"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="19dp"
        android:text="Cat IDs"
        android:textColor="#761d1d"
        android:textSize="24sp" />

    <Button
        android:id="@+id/yknowlage"
        android:layout_width="117dp"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="243dp"
        android:layout_marginTop="336dp"
        android:background="@drawable/rounded_button"
        android:text="Cat knowlage"
        android:textColor="#761d1d" />

    <Button
        android:id="@+id/camera"
        android:layout_width="120dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/rounded_button"
        android:text="Camera"
        android:textColor="#761d1d" />

    <Button
        android:id="@+id/chart"
        android:layout_width="118dp"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="246dp"
        android:layout_marginTop="178dp"
        android:background="@drawable/rounded_button"
        android:text="Image History"
        android:textColor="#761d1d" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yknowlage2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="98dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>


</RelativeLayout>